# ============================================================================
# .env
# Environment configuration for ProphetX Market Scanner
# ============================================================================

# ProphetX API Credentials - Production (for fetching market data)
PROPHETX_PRODUCTION_ACCESS_KEY=3e70f7b6fb4b933f771d1af589f64c59
PROPHETX_PRODUCTION_SECRET_KEY=5261fbcd72c308a963634463ff04e293

# ProphetX API Credentials - Sandbox (for placing test bets)
PROPHETX_SANDBOX_ACCESS_KEY=5688e8011a760da048111cbe7ae221a7  
PROPHETX_SANDBOX_SECRET_KEY=f970d61776dab2552521c595056d393a

# ProphetX Environment Settings
# Set to 'production' for live betting or 'sandbox' for testing
# Data fetching always uses production, bet placement uses this setting
PROPHETX_BETTING_ENVIRONMENT=sandbox


# Sports Configuration - Add/remove sports as needed

# Enabled Sports (comma-separated list)
# Options: NCAAF, MLB, NFL, NBA, NHL, etc.
TARGET_SPORTS=ncaaf,mlb,nfl

# Tournament IDs for each sport (comma-separated if multiple per sport)
NCAAF_TOURNAMENT_ID=27653
MLB_TOURNAMENT_ID=109  # Example: Multiple MLB tournaments
NFL_TOURNAMENT_ID=31
NBA_TOURNAMENT_ID=132
NHL_TOURNAMENT_ID=234

# Scanning window (hours ahead to look for events)
SCAN_WINDOW_HOURS=24

# ============================================================================
# Market Scanner Strategy Settings
# ============================================================================
MIN_STAKE_THRESHOLD=10000.0        # Minimum combined value + stake to follow ($10000)
MIN_INDIVIDUAL_THRESHOLD=2500.0    # Both stake and value must exceed this
UNDERCUT_IMPROVEMENT=1              # Odds improvement points (e.g., +107 becomes +108)

# Risk Management - Portfolio Level
MAX_EXPOSURE_TOTAL=10000.0          # Maximum total portfolio exposure ($10k)

# ============================================================================
# API and Performance Settings
# ============================================================================
API_DEBUG=false
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# ============================================================================
# Database and Logging
# ============================================================================
DATABASE_URL=sqlite:///./market_scanner.db
LOG_LEVEL=INFO
SAVE_SCAN_HISTORY=true

# ============================================================================
# ProphetX Commission Settings
# ============================================================================
PROPHETX_COMMISSION_RATE=0.03       # 3% commission rate on winning bets
BREAK_EVEN_BUFFER=0.01              # 1% buffer above break-even for profitability
